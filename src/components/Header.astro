---
import "../styles/global.css";
---

<header>
  <a href="/" class="logo">LOGO</a>
  <ul>
    <li><a href="/">HOME</a></li>
    <li><a href="/blog">BLOG</a></li>
    <li><a href="/apps">APPS</a></li>
  </ul>
  <button class="login"><a href="/login">LOGIN</a></button>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 40px;
    font-size: 20px;
    padding-left: 8px;
  }

  .logo {
    color: var(--text);
  }

  ul {
    display: flex;
    gap: 14px;
    cursor: pointer;
  }

  ul a {
    color: var(--text);
  }

  .login {
    color: var(--text);
    background: transparent;
    border: none;
    cursor: pointer;
  }

  .login a {
    color: var(--text);
  }
</style>
