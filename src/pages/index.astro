---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "SIGNAL FOCUSED | HOME";
---

<BaseLayout pageTitle={pageTitle}>
  <h2 class="welcome-title">Welcome to Signal Focused</h2>
  <div class="upper-container">
    <div class="card">
      <a href="/categories/digital%20entertainment">
        <img src="/images/digital-entertainment-image.avif" alt="" />
      </a>
      <div class="card-content">
        <h3>Digital Entertainment Blog</h3>
        <p>Video game reviews and recommendations</p>
      </div>
    </div>
    <div class="card">
      <a href="/categories/fantasy%20football">
        <img src="/images/fantasy-football-image.avif" alt="" />
      </a>
      <div class="card-content">
        <h3>Fantasy Football Blog</h3>
        <p>Dynasty and season long opinion and strategy</p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .welcome-title {
    margin-top: 40px;
    margin-bottom: 40px;
    text-transform: uppercase;
    text-align: center;
  }

  .upper-container {
    display: flex;
    justify-content: center;
    width: 100%;
    gap: 40px;
    padding-left: 40px;
    padding-right: 40px;
    margin-top: 40px;
    margin-bottom: 40px;
  }

  .card {
    position: relative;
    width: 50%;
    height: 400px;
    border: 2px solid var(--text);
    border-radius: 20px;
    overflow: hidden;
  }

  .card img {
    cursor: pointer;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-content {
    bottom: 0;
    left: 0;
    width: 100%;
    position: absolute;
    color: var(--text);
    line-height: 1.5rem;
    padding: 10px;
    background: rgba(0, 0, 0, 0.7);
  }

  .card-content h3 {
    font-size: 20px;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 8px;
  }

  .card-content p {
    color: var(--text);
    font-size: 16px;
    text-align: center;
  }
</style>
