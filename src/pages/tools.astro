<style>
  .card-container {
    display: flex;
    gap: 40px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 100px;
    margin-bottom: 60px;
  }

  .card {
    position: relative;
    display: inline-block;
    width: 300px;
    height: 400px;
    border: 2px solid #ffffff;
    border-radius: 20px;
    overflow: hidden;
  }

  .card img {
    cursor: pointer;
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-content {
    bottom: 0;
    left: 0;
    width: 100%;
    position: absolute;
    color: #ffffff;
    line-height: 1rem;
    padding: 10px;
    background: rgba(0, 0, 0, 0.7);
  }

  .card-content h3 {
    font-size: 28px;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 8px;
  }

  .card-content p {
    color: #ffffff;
    font-size: 18px;
    text-align: center;
  }
</style>
